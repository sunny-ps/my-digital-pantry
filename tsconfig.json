{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "$components/*": ["app/components/*"],
      "$components": ["app/components"],
      "$context": ["app/context"],
      "$schema/*": ["app/schema/*"],
      "$schema": ["app/schema"],
      "$screens/*": ["app/screens/*"],
      "$screens": ["app/screens"],
      "$hooks": ["app/hooks"],
      "$types": ["app/types"],
      "$utility": ["app/utility"]
    }
  }
}
